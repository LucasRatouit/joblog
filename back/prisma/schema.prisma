generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid()) @db.Uuid
  email    String @unique
  password String
  jobs     Job[]
}

model Job {
  id            String    @id @default(uuid()) @db.Uuid
  title         String
  company       String
  status        JobStatus @default(PENDING)
  location      String?
  description   String?
  email         String?
  phone         String?
  candidacyDate DateTime? // Date de candidature
  interviewDate DateTime? // Date d'entretien
  followUpDate  DateTime? // Date de relance

  userId String @db.Uuid
  user   User   @relation(fields: [userId], references: [id])
}

enum JobStatus {
  PENDING // En attente
  INTERVIEW // Entretien
  FOLLOW_UP // Rappeler
  ACCEPTED // Accept√©
}
